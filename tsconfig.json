{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "outDir": "./dist",
        "module": "ES2020",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictPropertyInitialization": false // because we have classes without methods as objects
    },
    "include": ["src/**/*.ts"]
}
